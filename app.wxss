/*上下居中*/

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.a-flex-end{
    align-items: flex-end
}

/*上下布局*/

.column {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/*左右两边对齐*/

.space-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.topBorder, .bottomBorder {
  position: relative;
}

.topBorder:after, .bottomBorder:before {
  position: absolute;
  content: '';
  width: 100%;
  height: 2rpx;
  background: #e0e0e0;
  left: 0;
  transform: scaley(0.6);
}

/*上边框伪类*/

.topBorder:after {
  top: 0;
}

/*下边框伪类*/

.bottomBorder:before {
  bottom: 0;
}

