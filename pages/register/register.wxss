/* pages/register/register.wxss */
page{
  background: #FAFAFA;
}
.box{
  width: 80vw;
  height: 480rpx;
  background: #fff;
  margin: 160rpx auto;
  position: relative;
  border-radius: 16rpx;
}
.box image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  position: absolute;
  top: 0%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.content{
  margin-top: 150rpx;
  padding: 100rpx 30rpx 0 30rpx;
}
.input{
  padding: 16rpx 30rpx;
  align-items: flex-end;
}
.input .title{
  width: 160rpx;
  font-size: 30rpx;
}
.input input{
  font-size: 30rpx;
  flex: 1;
  border-bottom: 1rpx solid #666666;
  box-sizing: border-box;
}
.btn{
  margin: 100rpx auto;
  width: 400rpx;
  height: 65rpx;
  background-color: #52b8f5;
  border-radius: 42rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 65rpx;
}
