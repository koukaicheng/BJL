.time {
    color: #c0c0c0;
    font-size: 24rpx;
    padding-top: 16rpx;
}

.bck {
    background: #fafafa;
    height: 30rpx;
}

.reply {
    padding: 0 28rpx;
    color: #333;
    font-size: 30rpx;
    background: #fff;
}

.reply .title {
     padding-top: 20rpx; 
}

.reply-title {
    margin-top: 28rpx;
    padding: 0 28rpx;
    color: #52b8f5;
    font-size: 30rpx;
    /* height: 80rpx; */
    padding-top: 28rpx;
    background: #fff;
}

.reply .box .reply-item {
    padding: 20rpx 0;
    align-items: flex-start;
}

.reply .box .reply-item .text {
    color: #666;
}

.reply .box .reply-item:last-child {
    border: none;
}

.footer {
    height: 120rpx;
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.footer .btn {
    width: 158rpx;
    height: 60rpx;
    border-radius: 30rpx;
    border: solid 1px #52b8f5;
    color: #52b8f5;
    font-size: 30rpx;
    text-align: center;
    line-height: 60rpx;
    margin: 0 40rpx;
    box-sizing: border-box;
}
