.container {
    background: #fafafa;
    box-sizing: border-box;
}

.wrap {
    height: 100vh;
    overflow-y: scroll;
    padding-bottom: 120rpx;
    box-sizing: border-box;
}

.proble-box {
    /* background: #fff; *//* margin-bottom: 30rpx; */
}

.box {
    border-bottom: 1rpx solid #d7d7d7;
    box-sizing: border-box;
}

.nostyle {
    border: 0;
}

.problem-item {
    width: 100%;
    padding: 26rpx 28rpx;
    align-items: flex-start;
    background: #fff;
    margin: 30rpx 0;
    box-sizing: border-box;
}

.problem-item .left {
    padding-top: 16rpx;
}

.problem-item .left image {
    width: 100rpx;
    height: 100rpx;
}

.problem-item  .right {
    width: 565rpx;
    margin-left: 30rpx;
}

.problem-item .right .content {
    min-height: 100rpx;
    font-size: 30rpx;
    color: #333;
}

.problem-item  .right .img {
    flex-wrap: wrap;
    justify-content: flex-start;
    padding: -10rpx;
}

.image-group {
    position: relative;
    /* flex-grow: 1; */
    width: 33.3%;
    height: 0;
    padding-top: 30%;
}

.image-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 5rpx;
    box-sizing: border-box;
}

.image-item image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    overflow: hidden;
}

